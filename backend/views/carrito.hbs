
<div class="container text-center  jumbotron mt-5">
  <div class="d-flex justify-content-center">
    
    <form action="/login" method="get" class="">
      <input class="btn btn-primary mb-3 mr-3" type="submit" value="Volver al Login" />
    </form>
  </div>
<div class="container">
    
  <h2><i>Lista de productos </i></h2>
  {{#if products.length}}
    <table class="table">
      <thead>
        <tr>
          <th scope="col">TÃ­tulo</th>
          <th scope="col">Precio</th>
          <th scope="col">Imagen</th>
     
        </tr>
      </thead>
      <tbody>
        {{#each products}}
          <tr>
            <td>{{this.title}}</td>
            <td>{{this.price}}</td>
            <td><img src="{{this.thumbnail}}" alt="{{this.thumbnail}}" width="100"></td>
           
          </tr>
        {{/each}}
      </tbody>
    </table>
  {{else}}
    <p>No se encontraron productos.</p>
  {{/if}}
  <form action="/login/carrito/finish" method="get" class="">
      <input class="btn btn-primary mb-3 mr-3" type="submit" value="Finalizar Compra" />
    </form>
</div>