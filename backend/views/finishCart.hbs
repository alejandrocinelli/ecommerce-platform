<div class="container text-center my-3">
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container">
      <a class="navbar-brand" href="/">The Shoes Shop</a>
    </div>
  </nav>

  <div class="container">
    <div>
      <h2>Su pedido esta siendo procesado</h2>
      <p>Username: {{sendInfoFront.user.username}}</p>
      <p>Email: {{sendInfoFront.user.email}}</p>
      <p>Phone: {{sendInfoFront.user.phono}}</p>
      
      <h2>Order Info</h2>
      <p>Order Number: {{sendInfoFront.order.orderNumber}}</p>
      
      <h3>Products</h3> 
    </div>
    
    <div class="table-responsive">
      <table class="table">
        <thead>
          <tr>
            <th>Title</th>
            <th>Quantity</th>
            <th>Price</th>
          </tr>
        </thead>
        <tbody>
          {{#each sendInfoFront.order.products}}
          <tr>
            <td>{{title}}</td>
            <td>{{quantity}}</td>
            <td>{{price}}</td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>
</div>


